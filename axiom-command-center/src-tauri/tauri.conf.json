{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "AxiomHive Command Center",
  "version": "1.0.0",
  "identifier": "com.axiomhive.commandcenter",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "windows": {
      "nsis": {
        "installMode": "perMachine",
        "languages": ["en-US"]
      },
      "wix": {
        "language": "en-US"
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "AxiomHive Command Center",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self' data:"
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "execute": true
    },
    "fs": {
      "scope": ["$APPDATA/axiom-command-center/**", "../AxiomHive/**", "../VALIDATION/schemas/**"],
      "readFile": true,
      "writeFile": true,
      "readDir": true,
      "createDir": true
    },
    "path": {
      "all": true
    }
  }
}
